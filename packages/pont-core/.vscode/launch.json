  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--timeout",
        "15000",
        "--colors",
        "${workspaceFolder}/test/test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug cmd",
      "program": "${workspaceFolder}/lib/cmd.js",
      "args": [
        "generate"
      ],
      "cwd": "${workspaceFolder}/",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    }
  ]
}